{
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": [
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "./**/*",
    "./liara.json",
    "./package.json"
  ],
  "exclude": [
    "/node_modules/**/*"
  ],
}